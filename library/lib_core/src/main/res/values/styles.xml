<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>      <!--ToolBarColor-->
        <item name="colorPrimaryDark">@android:color/transparent</item>  <!--StatusBarColor-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:divider">@drawable/ic_list_divider</item>-->
        <!--<item name="android:dividerHeight">@dimen/division_line</item>-->
        <!--<item name="android:listDivider">@drawable/ic_list_divider</item>-->
        <item name="android:windowBackground">@color/main_style</item>
        <!--       <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>-->
    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <!--字体样式4种-->
    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="text_style_big" parent="text_style">  <!--15sp+#333333-->
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_level_big</item>
    </style>
    <style name="text_style_def" parent="text_style">   <!--14sp+#333333-->
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_level_def</item>
    </style>
    <style name="text_style_mid" parent="text_style">   <!--12sp+#5F5F5F-->
        <item name="android:textColor">@color/text_color_def</item>
        <item name="android:textSize">@dimen/text_size_level_mid</item>
    </style>
    <style name="text_style_small" parent="text_style">   <!--10sp+#999999-->
        <item name="android:textColor">@color/text_color_light_gray</item>
        <item name="android:textSize">@dimen/text_size_level_small</item>
    </style>

    <!--单行输入框样式-->
    <style name="edit_style_def">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_level_def</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--多行输入框样式-->
    <style name="edit_style_multi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_def</item>
        <item name="android:textSize">@dimen/text_size_level_def</item>
        <item name="android:background">#ffffff</item>
        <item name="android:singleLine">false</item>
        <item name="android:minHeight">100dip</item>
        <item name="android:padding">@dimen/activity_sides_margin</item>
        <item name="android:lineSpacingExtra">5dip</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColorHint">@color/edit_hint_color</item>
        <item name="android:gravity">top|left</item>
    </style>
    <!--按钮-->
    <!--按钮样式-->
    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_size_level_def</item>
    </style>
    <style name="btn_red" parent="btn_style">
        <item name="android:background">@drawable/lib_core_shape_btn_red</item>
    </style>

    <style name="btn_green" parent="btn_style">
        <item name="android:background">@drawable/lib_core_shape_btn_green</item>
    </style>
    <style name="btn_blue" parent="btn_style">
        <item name="android:background">@drawable/lib_core_shape_btn_blue</item>
    </style>



</resources>
