<resources xmlns:tools="http://schemas.android.com/tools">

<!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>   <!--应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>  <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorAccent">@color/colorAccent</item> <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="android:statusBarColor">@color/colorPrimary</item><!-- 状态栏颜色，默认使用colorPrimaryDark-->
        <item name="android:navigationBarColor">@color/colorPrimary</item><!--底部导航栏颜色-->
        <item name="android:outlineProvider">background</item>    <!--阴影边界-->
        <item name="android:windowBackground">@color/windowBackground</item><!-- 窗口背景颜色-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>  <!--应用的主要文字颜色,actionBar的标题文字默认使用该颜色-->
        <item name="android:textColor">@color/textColorPrimary</item>   <!--Button,textView的文字颜色-->
        <item name="android:editTextColor">@color/textColorPrimary</item>  <!--默认EditView输入框字体的颜色。-->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorControlHighlight">@color/colorRipple</item>  <!--控件按压时的色调-->
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>



    <!--字体样式4种-->
    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--按钮样式-->
    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/btn_textsize</item>
    </style>
    <style name="btn_red" parent="btn_style">
        <item name="android:background">@drawable/lib_core_shape_btn_red</item>
    </style>

    <style name="btn_green" parent="btn_style">
        <item name="android:background">@drawable/lib_core_shape_btn_green</item>
    </style>
    <style name="btn_blue" parent="btn_style">
        <item name="android:background">@drawable/lib_core_shape_btn_blue</item>
    </style>



</resources>
